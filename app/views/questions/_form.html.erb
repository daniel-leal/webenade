<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :course, :as => :select, :prompt => 'Selecione o curso', :label_method => :nome, label: "Curso" %>
  <%= f.input :assunto %>
  <%= f.input :enunciado, as: :ckeditor %>
  <%= f.input :alternativa_a %>
  <%= f.input :alternativa_b %>
  <%= f.input :alternativa_c %>
  <%= f.input :alternativa_d %>
  <%= f.input :alternativa_e %>
  <%= f.input :alternativa_correta, collection: 'A'..'E', include_blank: false, :input_html => { :style => 'width: 50px;'} %>
  <%= f.input :tags %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
