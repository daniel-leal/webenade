<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="row">
    <div class="span4">
      <%= f.association :course, :as => :select, :prompt => 'Selecione o curso', :label_method => :nome, label: "Curso", :input_html => {class: "span3"} %>    
    </div>
    <div class="span8">
      <div class="row">
        <%= f.input :assunto, :input_html => {class: "span6"} %>
      </div>
    </div>
  </div>

  <%= f.input :enunciado,  :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'MyToolbar', :language => "pt", width: "940px" } } %>

  <div class="row">
    <div class="span6">
      <%= f.input :alternativa_a, :input_html => {class: "span4"} %>
    </div>
    <div class="span6">
      <%= f.input :alternativa_b, :input_html => {class: "span4"} %>    
    </div>
  </div>

  <div class="row">
    <div class="span6">
      <%= f.input :alternativa_c, :input_html => {class: "span4"} %>
    </div>
    <div class="span6">
      <%= f.input :alternativa_d, :input_html => {class: "span4"} %>    
    </div>
  </div>

  <div class="row">
    <div class="span6">
      <%= f.input :alternativa_e, :input_html => {class: "span4"} %>
    </div>
    <div class="span6">
      <%= f.input :tags, :input_html => { class: "span2"} %>
    </div>
  </div>

  <%= f.input :alternativa_correta, collection: 'A'..'E', include_blank: false, :input_html => { class: "span1"} %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
