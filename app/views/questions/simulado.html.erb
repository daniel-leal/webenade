<style type="text/css">
	.corpo{
		padding-top: 80px;
	}
</style>

<%= form_tag fazer_simulado_questions_path, :html => { :class => 'form-horizontal' } do %>
	<center class="corpo">
	  <div class="form-action">
	  	<div>
	    
	    <%= select_tag :curso, options_for_select(@courses.collect{ |u| [u.nome, u.id] }) %>
	    </div><br>
	    <div>
		
		<%= select_tag :qtd_questao, options_for_select(%w[5 10 15 20]) %>
		</div><br>
	    <%= submit_tag "Enviar", class: "btn btn-primary" %>
	  <div>
	</center>
<% end %>